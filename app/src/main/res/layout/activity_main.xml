<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/msg_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="289dp"
        android:text="Estou aguardando seu nome..."
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg_button" />

    <Button
        android:id="@+id/msg_button"
        android:layout_width="147dp"
        android:layout_height="0dp"
        android:layout_marginBottom="68dp"
        android:text="Dizer OlÃ¡"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/msg_output"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_name" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="253dp"
        android:layout_height="0dp"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="Digite o seu nome..."
        android:inputType="text"
        android:singleLine="true"
        android:textColor="#72000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/msg_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>